<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gwu.rbing_lyu.metro_explorer_hahaha.activity.MenuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Metro Explorer"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center" />

    <Button
        android:id="@+id/nearest_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/nearest_button_text"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp" />

    <Button
        android:id="@+id/select_station_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/select_station_button_text"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp" />

    <Button
        android:id="@+id/favorites_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/favorites_button_text"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_margin="20dp" />


</LinearLayout>
